{
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.isort": true,
    "source.fixAll.black": true,
    "source.fixAll.pep8": true
  },
  "isort.args": [
    "--profile",
    "black"
  ],
  "autoDocstring.docstringFormat": "numpy",
  "python.analysis.typeCheckingMode": "basic",
  "pylint.args": [
    "--ignored-modules=scipy.special",
    "--disable=C0103" // C0103 is the Pylint code for snake_casing issues
  ],
  "python.analysis.extraPaths": [
    "**/test" // Will match any folder named "test" and its subdirectories
  ]
}