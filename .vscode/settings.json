{
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
  },
  "isort.args": [
    "--profile",
    "black"
  ],
  "autoDocstring.docstringFormat": "numpy",
  "python.analysis.typeCheckingMode": "basic"
}